<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include("partials/header"); %>
  </head>

  <body>
    <form method="POST" action="/new-entry" class="card card-body">
      <div class="form-group">
        <label for="title">Title</label>
        <input
          type="text"
          class="form-control"
          name="title"
          id="title"
          placeholder="Ingrese un tÃ­tulo"
          autofocus
          required
        />
      </div>
      <div class="form-group">
        <label for="author">Author</label>
        <input
          type="text"
          class="form-control"
          name="author"
          id="author"
          placeholder="Ingrese un autor"
          required
        />
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        <input
          type="text"
          class="form-control"
          name="image"
          id="image"
          placeholder="Ruta de la imagen"
          required
        />
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea
          name="description"
          id="description"
          rows="2"
          class="form-control"
        ></textarea>
      </div>
      <input type="submit" value="Guardar Libro" class="btn btn-primary" />
    </form>
  </body>
</html>
